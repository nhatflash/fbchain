#   image: String
# }


type Query {
  me: User
  users: [User!]!
  user(id: ID!): User
  tenants: [Tenant!]!
  tenant(id: ID!): Tenant
  restaurants: [Restaurant!]!
  restaurant(id: ID!): Restaurant
  restaurantImages: [RestaurantImage!]!
  restaurantImage(id: ID!): RestaurantImage
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
