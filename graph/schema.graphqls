# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Date

enum TenantType {
  TENANT_PERSONAL
  TENANT_BUSINESS
}

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  email: String!
  phone: String
  identity: String
  firstName: String
  lastName: String
  gender: String
  birthdate: Date
  postalCode: String
  address: String
  profileImage: String
}

type Tenant {
  id: ID!
  code: String!
  description: String
  type: TenantType
  notes: String
  user: User!
}

