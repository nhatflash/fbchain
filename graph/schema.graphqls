type Query {
  users: [User!]!
  user(id: ID!): User
  tenants: [Tenant!]!
  tenant(id: ID!): Tenant
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
